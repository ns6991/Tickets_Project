<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDECEC"

    tools:context=".MyTicketInfo_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:onClick="seeTicket"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:src="@drawable/seepdf" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5" />


            <TextView
                android:id="@+id/nameTvID11"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:text="TextView"
                android:textSize="14sp"
                android:textColor="#77010E"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/placeTvID11"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:text="TextView"
                android:textSize="14sp"
                android:textColor="#77010E"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dateTimeID11"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:text="TextView"
                android:textColor="#77010E"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price_amount11"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:text="TextView"
                android:textColor="#77010E"
                android:textSize="14sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:onClick="back"
                android:src="@drawable/back" />




            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>